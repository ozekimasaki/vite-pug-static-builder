{
  "name": "vite-pug-static-builder",
  "version": "1.0.1",
  "description": "Vite + Pugを使用した静的サイトビルダー - 複数のPugファイルを静的HTMLとしてビルドするViteプラグイン",
  "author": "maigo999",
  "license": "MIT",
  "homepage": "https://github.com/ozekimasaki/vite-pug-static-builder#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ozekimasaki/vite-pug-static-builder.git"
  },
  "bugs": {
    "url": "https://github.com/ozekimasaki/vite-pug-static-builder/issues"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "static",
    "pug",
    "static-site",
    "site-builder",
    "html-generator"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "type-check": "tsc --noEmit -p .",
    "test:vite6": "VITE_MAJOR_VERSION=6 vitest run",
    "test:vite7": "VITE_MAJOR_VERSION=7 vitest run",
    "test": "pnpm test:vite7",
    "test:update": "vitest run -u",
    "test:watch": "vitest",
    "coverage": "VITE_MAJOR_VERSION=7 vitest run --coverage",
    "tsc": "tsc -p .",
    "build": "pnpm clean && pnpm tsc",
    "prepublishOnly": "pnpm coverage && pnpm build"
  },
  "dependencies": {
    "ansis": "^3.2.0",
    "picomatch": "^4.0.2",
    "pug": "^3.0.3"
  },
  "peerDependencies": {
    "pug": "^3.0.0",
    "vite": "^6.0.0 || ^7.0.0-beta.0"
  },
  "devDependencies": {
    "@types/picomatch": "^2.3.3",
    "@types/pug": "^2.0.10",
    "@vitest/coverage-v8": "^3.2.1",
    "axios": "^1.7.9",
    "fs-extra": "^11.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vite": "^6.0.0",
    "vitest": "^3.2.1"
  }
}
